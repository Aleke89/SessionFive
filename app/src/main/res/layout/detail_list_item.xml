<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_container"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/detail_img_logo"
        android:layout_marginTop="10dp"
        android:src="@drawable/baseline_castle_24"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_detail_title"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Transfer from Airport $20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_detail_date"
            android:layout_marginStart="2dp"
            android:text="From: 10/12/2022 To:12/12/2022"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_detail_number"
            android:textColor="@color/black"
            android:text="Number of People: 1"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/detail_img_delete"
        android:src="@drawable/baseline_delete_24"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
</LinearLayout>